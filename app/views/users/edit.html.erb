<h1>Edit User</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @user do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username, placeholder: 'newuser123' %><br><br>

  <%= f.label :email, "Email:" %>
  <%= f.email_field :email, placeholder: 'name@example.com' %><br><br>

  <%= f.label :password, "Password:" %>
  <%= f.password_field :password, placeholder: 'mysecurepassword' %><br><br>

  <%= f.submit "Submit" %>
<% end %>