<h1>New User Signup</h1>

<%= form_with model: @user, url: users_path, method: :post do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username, placeholder: 'newuser123' %><br><br>

  <%= f.label :email, "Email:" %>
  <%= f.email_field :email, placeholder: 'name@example.com' %><br><br>

  <%= f.label :password, "Password:" %>
  <%= f.password_field :password, placeholder: 'mysecurepassword' %><br><br>

  <%= f.submit "Submit" %>
<% end %>